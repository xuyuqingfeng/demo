<p id="notice"><%= notice %></p>

<h1>Lists</h1>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Idcard</th>
    <th>Phone</th>
    <% if can? :manage, @list %>
      <th colspan="3"></th>
    <% end %>
  </tr>
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.idcard %></td>
      <td><%= list.phone %></td>
      <% if can? :manage, @list %>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <% if can? :destroy, @list %>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
<% if can? :create, @list %>
  <%= link_to 'New List', new_list_path %>
<% end %>